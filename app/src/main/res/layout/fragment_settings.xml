
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".programmer.laboratore_6.SettingsFragment">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Administrator Enabled"
        android:id="@+id/admin_enabled_label"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Display Button"
        android:id="@+id/display_lock_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lock Screen"
        android:id="@+id/lockscreen_label" />

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ToggleButton
        android:layout_width="@dimen/toggle_button_size"
        android:layout_height="@dimen/toggle_button_size"
        android:text="Administrator Enabled"
        android:id="@+id/admin_enabled"
        android:background="@drawable/toggle_check"
        android:textOn=""
        android:textOff=""
        android:checked="false" />
    <ToggleButton
        android:layout_width="@dimen/toggle_button_size"
        android:layout_height="@dimen/toggle_button_size"
        android:text="Display Lock Button"
        android:id="@+id/display_lock"
        android:checked="false"
        android:background="@drawable/toggle_check"
        android:textOn=""
        android:textOff="" />
    <ToggleButton
        android:layout_width="@dimen/toggle_button_size"
        android:layout_height="@dimen/toggle_button_size"
        android:text="Display Lock Button"
        android:id="@+id/lockScreenEnable"
        android:checked="false"
        android:background="@drawable/toggle_check"
        android:textOn=""
        android:textOff="" />
</LinearLayout>

</LinearLayout>
